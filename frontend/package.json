    "js-beautify": "^1.15.4",
    "prettier": "^3.6.2",
    "stylelint": "^16.24.0",
    "stylelint-config-standard-scss": "^16.0.0",
    "stylelint-scss": "^6.12.1",
    "vite": "^7.1.2",
    "vituum": "^1.2.0"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.10",
    "@fullcalendar/daygrid": "^6.1.10",
