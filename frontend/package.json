  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "serve": "vite preview --host",
    "clean": "rm -rf dist",
    "lint:scss": "stylelint \"src/assets/**/*.scss\"",
    "lint": "npm run lint:scss",
    "format-js": "prettier --write \"src/assets/**/*.js\" && node fix-handlebars-indentation.cjs",
