{{#> base/containers/html-container title="Reset Password" script-src="/src/assets/pages/reset-password/main.js" }}
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4 p-5 pb-3 bg-white rounded shadow-sm">
            <h1 class="pb-3 text-center fw-bold">Reset your password</h1>
            <p class="text-center text-muted mb-4">Choose a new password for your OpenStream account.</p>
            <form class="w-100 d-flex flex-column" id="passwordResetForm">
                <div class="mb-3">
                    <label for="newPassword" class="form-label">New password</label>
                    <input class="form-control" type="password" id="newPassword" placeholder="Enter a new password" required minlength="8" autocomplete="new-password">
                </div>
                <div class="mb-4">
                    <label for="confirmPassword" class="form-label">Confirm new password</label>
                    <input class="form-control" type="password" id="confirmPassword" placeholder="Re-enter your new password" required minlength="8" autocomplete="new-password">
                </div>
                <button class="btn btn-primary w-100" type="submit" id="submitPasswordBtn">
                    <span class="spinner-border spinner-border-sm d-none me-2" id="submitSpinner" role="status" aria-hidden="true"></span>
                    <span>Update Password</span>
                </button>
                <div class="w-100 text-center mt-3" id="statusMessage"></div>
                <div class="w-100 text-center mt-4">
                    <a href="/sign-in" class="text-decoration-none">Back to sign in</a>
                </div>
            </form>
        </div>
    </div>
{{/base/containers/html-container}}
