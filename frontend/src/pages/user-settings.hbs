{{#> base/containers/html-container title="User Settings" script-src="/src/assets/pages/user-settings/main.js" }}
    {{> pages/user-settings/navbar-user-settings }}
    {{#> base/containers/main-container }}
        <div class="container mt-5">
            <!-- Go Back Button -->
            <div class="mb-3">
                <button id="go-back-btn" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> {% trans "Go Back" %}
                </button>
            </div>
            <div class="row">
                <!-- User Info Form -->
                <div class="col-md-6">
                    <h2>{% trans "Update User Information" %}</h2>
                    <div id="user-alert" class="alert d-none" role="alert"></div>
                    <form id="user-form">
                        <div class="mb-3">
                            <label for="user_setting_username" class="form-label">{% trans "Username:" %}</label>
                            <input type="text" id="user_setting_username" name="user_setting_username" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">{% trans "Email:" %}</label>
                            <input type="email" id="email" name="email" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="first_name" class="form-label">{% trans "First Name:" %}</label>
                            <input type="text" id="first_name" name="first_name" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="last_name" class="form-label">{% trans "Last Name:" %}</label>
                            <input type="text" id="last_name" name="last_name" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="language_preference" class="form-label">{% trans "Language Preference:" %}</label>
                            <select id="language_preference" name="language_preference" class="form-control">
                                <option value="da">{% trans "Dansk" %}</option>
                                <option value="sv">{% trans "Svenska" %}</option>
                                <option value="en">{% trans "English" %}</option>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">{% trans "Save Changes" %}</button>
                    </form>
                </div>
                <!-- Password Change Form -->
                <div class="col-md-6">
                    <h2>{% trans "Change Password" %}</h2>
                    <div id="password-alert" class="alert d-none" role="alert"></div>
                    <form id="password-form">
                        <div class="mb-3">
                            <label for="old_password" class="form-label">{% trans "Old Password:" %}</label>
                            <input type="password" id="old_password" name="old_password" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="new_password" class="form-label">{% trans "New Password:" %}</label>
                            <input type="password" id="new_password" name="new_password" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirm_password" class="form-label">{% trans "Confirm New Password:" %}</label>
                            <input type="password" id="confirm_password" name="confirm_password" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-danger">{% trans "Change Password" %}</button>
                    </form>
                </div>
            </div>
        </div>
    {{/ base/containers/main-container }}
{{/ base/containers/html-container }}