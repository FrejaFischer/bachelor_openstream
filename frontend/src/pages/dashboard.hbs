{{#> base/containers/html-container title="Dashboard" script-src="/src/assets/pages/dashboard/main.js" }}
    {{> base/navbar/navbar_branch }}
    {{#> base/containers/main-container }}
        <div class="dashboard-container d-flex justify-content-between" role="region" aria-label="Dashboard">
            <main class="dashboard-main dashboard-content-wrapper p-4">
                <div class="dashboard-top-bottom-wrapper gap-4">
                    <div class="dashboard-top-row gap-4" aria-label="Recent content and playlists">
                        <div class="dashboard-cards-container">
                            <section class="dashboard-card p-3" aria-labelledby="recent-content-title">
                                <div class="w-100 d-flex justify-content-between align-items-center mb-3">
                                    <h3 id="recent-content-title" class="dashboard-card-title">
                                        {% trans 'Recently edited content' %}
                                    </h3>
                                    <div>
                                        <a href="/manage-content?createSlideshow=true" class="btn btn-primary btn-sm" aria-label='{% trans "Create new content" %}'>
                                            <span class="material-symbols-outlined icon-22" aria-hidden="true">add</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="dashboard-card-scrollable-content" role="list">
                                    <!-- Recent content items will be inserted here by
                                        `static/js_and_css/pages/dashboard/dashboard.js`.
                                    -->
                                </div>
                                <div class="mt-2">
                                    <a href="/manage-content" class="btn btn-sm d-flex" aria-label="{% trans 'Go to content' %}">
                                        <span class="btn-text">{% trans 'Go to content' %}</span>
                                        <span class="material-symbols-outlined icon-22 ms-1" aria-hidden="true">arrow_forward</span>
                                    </a>
                                </div>
                            </section>
                        </div>

                        <div class="dashboard-cards-container">
                            <section class="dashboard-card p-3" aria-labelledby="recent-playlists-title">
                                <div class="w-100 d-flex justify-content-between align-items-center mb-3">
                                    <h3 id="recent-playlists-title" class="dashboard-card-title">
                                        {% trans "Recently edited playlists" %}</h3>
                                    <div>
                                        <a href="/slideshow-playlists?createPlaylist=true" class="btn btn-primary btn-sm" aria-label="{% trans 'Create new playlist' %}">
                                            <span class="material-symbols-outlined icon-22" aria-hidden="true">add</span>
                                        </a>
                                    </div>
                                </div>
                                <div class="dashboard-card-scrollable-content" role="list">
                                    <!-- Recently edited playlists will be populated here by
                                        `static/js_and_css/pages/dashboard/dashboard.js`.
                                    -->
                                </div>
                                <div class="mt-2">
                                    <a href="/slideshow-playlists" class="btn btn-sm d-flex" aria-label="{% trans 'Go to playlists' %}">
                                        <span class="btn-text">{% trans 'Go to playlists' %}</span>
                                        <span class="material-symbols-outlined icon-22 ms-1" aria-hidden="true">arrow_forward</span>
                                    </a>
                                </div>
                            </section>
                        </div>
                    </div>

                    <section class="dashboard-card p-3 dashboard-bottom" aria-labelledby="screen-views-title">
                        <h3 id="screen-views-title" class="dashboard-card-title">{% trans 'Playback schedule' %}</h3>
                        <div class="dashboard-card-scrollable-content w-100 mt-3 d-flex justify-content-between gap-4">
                            <div class="d-flex flex-column h-100 w-50">
                                <span class="subheading mb-2">{% trans 'Now playing' %}</span>
                                <div id="now-playing-list" class="d-flex flex-column gap-2">
                                    <!-- Now-playing entries will be injected here by
                                `static/js_and_css/pages/dashboard/dashboard.js`.
                            -->
                                </div>
                            </div>
                            <div class="d-flex flex-column h-100 w-50">
                                <span class="subheading mb-2">{% trans 'Scheduled' %}</span>
                                <div id="upcoming-list" class="d-flex flex-column gap-2">
                                    <!-- Upcoming schedule entries will be populated here by
                                        `static/js_and_css/pages/dashboard/dashboard.js`.
                                    -->
                                </div>
                            </div>
                        </div>
                        <div class="mt-2">
                            <a href="/manage-displays" class="btn btn-sm d-flex" aria-label="{% trans 'Go to manage displays' %}">
                                <span class="btn-text">{% trans 'Go to manage displays' %}</span>
                                <span class="material-symbols-outlined icon-22 ms-1" aria-hidden="true">arrow_forward</span>
                            </a>
                        </div>
                    </section>
                </div>
            </main>

            <aside class="dashboard-sidebar" aria-labelledby="getting-started-title">
                <h2 id="getting-started-title" class="sidebar-title">{% trans 'Watch: Getting started' %}</h2>
                <video class="mt-3 full-width-video" controls aria-label="OpenStream demo video">
                    <source src="openstream_demo.mp4" type="video/mp4">
                    {% trans "Your browser does not support the video tag." %}
                </video>
                <h3 class="mt-3 mb-3">{% trans 'Help' %}</h3>
                <ul class="help-list gap-2">
                    <li>
                        <a href="/documentation">{% trans 'How do I create content?' %}</a>
                    </li>
                    <li>
                        <a href="/documentation">{% trans 'How do I connect a display to OpenStream?' %}</a>
                    </li>
                    <li>
                        <a href="/documentation">{% trans 'How do I assign content to a display?' %}</a>
                    </li>
                    <li>
                        <a href="/documentation">{% trans 'What is a playlist?' %}</a>
                    </li>
                    <li>
                        <a href="/documentation">{% trans 'How do I create scheduled content for a display group?' %}</a>
                    </li>
                    <li>
                        <a href="/documentation">{% trans 'How do I create weekly recurring content for a display group?' %}</a>
                    </li>
                </ul>
            </aside>
        </div>
    {{/base/containers/main-container}}
{{/base/containers/html-container}}