{{#> base/containers/html-container title="Sign In" script-src="/src/assets/pages/sign-in/main.js" }}
    <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
        <div class="col-12 col-sm-10 col-md-8 col-lg-6 col-xl-4 p-5 pb-3 bg-white rounded shadow-sm">
            <h1 class="pb-4 text-center fw-bold">Sign in to OpenStream</h1>
            <form class="w-100 d-flex flex-column align-items-center" id="signinForm">
                <div class="w-100 mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input class="form-control" type="text" id="username" placeholder="Username" required autocomplete="username">
                </div>
                <div class="w-100 mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input class="form-control" type="password" id="password" placeholder="Password" required autocomplete="current-password">
                </div>
                <button class="btn btn-primary w-100 mb-3" type="submit">Sign In</button>
                <div class="w-100 text-center mb-3">
                    <a href="#" class="text-decoration-none" data-bs-toggle="modal" data-bs-target="#resetPasswordModal">Forgot your password?</a>
                </div>
                <div class="message w-100 text-center" id="message"></div>
                <img class="w-75 px-5 mt-5 mb-2" src="/openstream_logo_primary.svg" alt="OpenStream Logo">
            </form>
            <div class="modal fade" id="resetPasswordModal" tabindex="-1" aria-labelledby="resetPasswordModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="resetPasswordModalLabel">Reset Password</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form id="resetPasswordForm">
                                <div class="mb-3">
                                    <label for="resetEmail" class="form-label">Email address</label>
                                    <input type="email" class="form-control" id="resetEmail" placeholder="Enter your email address" required>
                                    <div class="form-text">
                                        Enter the email address associated with your account. We'll send you a secure reset link.
                                    </div>
                                </div>
                                <div id="resetMessage" class="text-center mb-3"></div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" form="resetPasswordForm" class="btn btn-primary" id="resetPasswordBtn">
                                <span class="spinner-border spinner-border-sm d-none" id="resetSpinner" role="status" aria-hidden="true"></span>
                                Send Reset Link
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{/base/containers/html-container}}