{{#> base/containers/html-container title="WinKAS Bookings Slide - Configuration" }}

    <div class="container py-2">
        <div class="row mb-3">
            <div class="col-12">
                <label for="location-input" class="form-label">Location</label>
                <select id="location-input" class="form-select">
                    <option value="">Loading locations...</option>
                </select>
            </div>
        </div>

        <div id="sub-locations-section" class="row mb-3" style="display: none;">
            <div class="col-12 mb-2 d-flex align-items-center">
                <div class="form-check me-3">
                    <input class="form-check-input" type="checkbox" id="all-selector">
                    <label class="form-check-label" for="all-selector">Select all sub-locations</label>
                </div>
                <small id="no-locations-message" class="text-muted" style="display:none;"></small>
            </div>

            <div id="multiSelectContainer" class="row g-2"></div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <label for="scroll-speed" class="form-label">Marquee scroll speed</label>
                        <div class="d-flex align-items-center">
                            <input id="scroll-speed" type="range" min="1" max="10" step="1" value="5" class="form-range me-3">
                            <span id="scroll-speed-value">5</span>
                        </div>
                <div class="form-text">Lower values = faster scrolling. Adjust to taste.</div>
            </div>
        </div>

    </div>

{{/ base/containers/html-container }}