{{#> base/containers/html-container title="KMD Foreningsportalen Configuration Form" }}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card bg-dark border-secondary">
                    <div class="card-header">
                        <h5 class="mb-0 text-white">KMD Foreningsportalen Display Configuration</h5>
                    </div>
                    <div class="card-body">
                        <!-- Location Selection -->
                        <div class="mb-4">
                            <label for="location-input" class="form-label text-white">Choose Main Location</label>
                            <select name="location-input" id="location-input" class="form-select bg-secondary text-white border-secondary">
                                <option value="">Select a location...</option>
                            </select>
                        </div>

                        <!-- Sub-locations Section -->
                        <div id="sub-locations-section" class="mb-4">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <label class="form-label text-white mb-0">Select Sub-locations to Display</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="checkbox" id="all-selector" />
                                    <label class="form-check-label text-white" for="all-selector">
                                        Select All
                                    </label>
                                </div>
                            </div>

                            <div id="sub-locations-container" class="border border-secondary rounded p-3 bg-secondary bg-opacity-25">
                                <div id="multiSelectContainer" class="row">
                                    <!-- Sub-locations will be populated here -->
                                </div>
                                <div id="no-locations-message" class="text-muted text-center py-3">
                                    Please select a main location first.
                                </div>
                            </div>
                        </div>

                        <!-- Warning Message -->
                        <div id="warningMessage" class="alert alert-warning d-none" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            Please select at least one sub-location to display bookings.
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/ base/containers/html-container }}