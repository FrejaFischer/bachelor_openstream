{{#> base/containers/html-container title="KMD Foreningsportalen Configuration Form" }}

    <div class="container py-2">
        <div class="row mb-3">
            <div class="col-12">
                <label for="location-input" class="form-label">{% trans "Location" %}</label>
                <select id="location-input" class="form-select">
                    <option value="">Loading locations...</option>
                </select>
            </div>
        </div>
     
        <div id="sub-locations-section" class="row mb-3 bg-secondary-accent" style="display: none;">
            <div class="form-check mb-2 pb-2 bg-white">
            <input class="form-check-input" type="checkbox" id="all-selector">
            <label class="form-check-label" for="all-selector">{% trans "Select all sub-locations" %}</label>
        </div>
            <div class="col-12 mb-2 d-flex align-items-center">
                <small id="no-locations-message" class="text-muted" style="display:none;"></small>
            </div>

            <div id="multiSelectContainer" class="row col-12"></div>
        </div>

        <div class="row mb-3">
            <div class="col-12">
                <label for="scroll-speed" class="form-label">{% trans "Scroll speed" %}</label>
                <div class="d-flex align-items-center">
                    <input id="scroll-speed" type="range" min="1" max="10" step="1" value="5" class="form-range me-3">
                    <span id="scroll-speed-value">5</span>
                </div>
                <div class="form-text">{% trans "Lower values = faster scrolling. Adjust to taste." %}</div>
            </div>
        </div>

    </div>

{{/ base/containers/html-container }}