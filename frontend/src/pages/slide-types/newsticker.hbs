{{#> base/containers/html-container title="News Ticker Widget" script-src="/src/assets/slide-types/newsticker/main.js" }}

    <style>
        :root {
            --ticker-distance: 100%;
            --ticker-duration: 60s;
        }

        body {
            margin: 0;
            height: 100vh;
            overflow: hidden;
            font-family: Arial, sans-serif;
            background: #000;
        }

        #newsTickerBox {
            position: absolute;
            inset: 0;
            background: #000;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            padding: 20px;
            box-sizing: border-box;
        }

        #clock,
        #news,
        #weather {
            font-size: var(--ticker-font-size);
        }

        .news-items a {
            font-size: var(--ticker-font-size);
        }

        .ticker-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
        }

        #clock,
        #news,
        #weather {
            margin: 0 10px;
            white-space: nowrap;
        }

        #news {
            flex: 1;
            overflow: hidden;
            position: relative;
        }

        .news-wrapper {
            display: flex;
            width: max-content;
            will-change: transform;
            animation: scroll var(--ticker-duration) linear infinite;
        }

        .news-items {
            display: flex;
            white-space: nowrap;
        }

        .news-items a {
            color: #fff;
            text-decoration: none;
            margin-right: 80px;
        }

        @keyframes scroll {
            from {
                transform: translateX(0);
            }

            to {
                transform: translateX(calc(-1 * var(--ticker-distance)));
            }
        }

        @media (prefers-reduced-motion: reduce) {
            .news-wrapper {
                animation: none;
            }
        }
    </style>

    <div id="newsTickerBox">
        <div class="ticker-content">
            <p id="clock" aria-label="Current Time" style="display: none">
                00:00:00
            </p>
            <div id="news" aria-label="Latest News" style="display: none">
                <div class="news-wrapper" id="news-wrapper">
                    <div class="news-items" id="news-items-1">Loading news...</div>
                    <div class="news-items" id="news-items-2">Loading news...</div>
                </div>
            </div>
            <p id="weather" aria-label="Current Weather" style="display: none">
                Loading weatherâ€¦
            </p>
        </div>
    </div>

{{/ base/containers/html-container }}