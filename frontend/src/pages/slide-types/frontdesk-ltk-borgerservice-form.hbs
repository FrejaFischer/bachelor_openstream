{{#> base/containers/html-container title="Frontdesk LTK Borgerservice Configuration Form" }}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card bg-dark border-secondary">
                    <div class="card-header">
                        <h5 class="mb-0 text-white">LTK Borgerservice Queue Display</h5>
                    </div>
                    <div class="card-body">
                        <!-- Description Section -->
                        <div class="alert alert-info mb-4" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>About this widget:</strong> This element displays the live frontdesk queue for LTK Borgerservice, helping customers see current wait times and queue status.
                        </div>

                        <!-- Features List -->
                        <div class="mb-4">
                            <h6 class="text-white mb-3">Features</h6>
                            <div class="row">
                                <div class="col-md-6 mb-2">
                                    <div class="d-flex align-items-center text-white">
                                        <i class="fas fa-users me-2 text-primary"></i>
                                        <span>Live Queue Status</span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="d-flex align-items-center text-white">
                                        <i class="fas fa-clock me-2 text-primary"></i>
                                        <span>Real-time Updates</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Action Button -->
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-primary" id="add-webview-btn">
                                <i class="fas fa-plus me-2"></i>Add Queue Display
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/ base/containers/html-container }}