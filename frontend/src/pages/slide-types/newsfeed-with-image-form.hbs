{{#> base/containers/html-container title="News Feed with Image Configuration" }}

    <div>
        <div class="card-body">
            <!-- Description Section -->
            <div class="alert alert-info mb-4 bg-secondary-accent-lighter border-gray" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                <strong>{% trans "DR-Style News Display:" %}</strong> {% trans "Creates a news carousel with optional weather and clock, based on DR RSS Feed and DMI Weather API." %}
            </div>

            <h4 class=" mb-3">{% trans "Settings" %}</h4>
            <!-- Settings -->
            <div class="row">
                <!-- Column 1: Colors & Toggles -->
                <div class="col-12">
                    <!-- Text Color -->
                    <div class="mb-3 d-none">
                        <label for="text-color" class="form-label">{% trans "Text Color" %}</label>
                        <input type="color" id="text-color" class="form-control form-control-color" value="#ffffff" />
                    </div>
                    <!-- Background Color -->
                    <div class="mb-3 d-none">
                        <label for="background-color" class="form-label ">{% trans "Background Color" %}</label>
                        <input type="color" id="background-color" class="form-control form-control-color" value="#000000" />
                    </div>
                    <!-- Include Clock -->
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="include-clock" checked />
                        <label class="form-check-label" for="include-clock">{% trans "Include Clock" %}</label>
                    </div>
                    <!-- Include Weather -->
                    <div class="form-check mb-2">
                        <input class="form-check-input" type="checkbox" id="include-weather" checked />
                        <label class="form-check-label " for="include-weather">{% trans "Include Weather" %}</label>
                    </div>
                </div>

                <!-- Column 2: Font Sizes & Timings -->
                <div class="col-12">
                    <!-- Title Font Size -->
                    <div class="mb-3 row">
                        <label for="title-font-size" class="col-sm-4 col-form-label ">{% trans "Title Font Size (rem)" %}</label>
                        <div class="col-sm-8">
                            <input type="number" id="title-font-size" class="form-control  " value="2.5" step="0.125" min="1" max="4" />
                        </div>
                    </div>
                    <!-- Description Font Size -->
                    <div class="mb-3 row">
                        <label for="description-font-size" class="col-sm-4 col-form-label ">{% trans "Description Font Size (rem)" %}</label>
                        <div class="col-sm-8">
                            <input type="number" id="description-font-size" class="form-control  " value="1.25" step="0.125" min="0.75" max="2" />
                        </div>
                    </div>
                    <!-- Category Font Size -->
                    <div class="mb-3 row">
                        <label for="category-font-size" class="col-sm-4 col-form-label ">{% trans "Category Badge Font Size (rem)" %}</label>
                        <div class="col-sm-8">
                            <input type="number" id="category-font-size" class="form-control  " value="0.875" step="0.125" min="0.5" max="1.5" />
                        </div>
                    </div>
                    <!-- Clock Font Size -->
                    <div class="mb-3 row">
                        <label for="clock-font-size" class="col-sm-4 col-form-label ">{% trans "Clock Font Size (rem)" %}</label>
                        <div class="col-sm-8">
                            <input type="number" id="clock-font-size" class="form-control  " value="1.75" step="0.125" min="0.75" max="3" />
                        </div>
                    </div>
                    <!-- Weather Font Size -->
                    <div class="mb-3 row">
                        <label for="weather-font-size" class="col-sm-4 col-form-label ">{% trans "Weather Font Size (rem)" %}</label>
                        <div class="col-sm-8">
                            <input type="number" id="weather-font-size" class="form-control  " value="1.25" step="0.125" min="0.75" max="2" />
                        </div>
                    </div>
                    <!-- Story Duration -->
                    <div class="mb-3 row">
                        <label for="story-duration" class="col-sm-4 col-form-label ">{% trans "Story Duration (seconds)" %}</label>
                        <div class="col-sm-8">
                            <input type="number" id="story-duration" class="form-control  " value="10" min="3" max="30" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/ base/containers/html-container }}