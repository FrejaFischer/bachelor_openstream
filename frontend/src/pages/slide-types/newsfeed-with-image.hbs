{{#> base/containers/html-container title="News Feed with Image" script-src="/src/assets/slide-types/newsfeed-with-image/main.js" }}

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />

    <style>
        /* Basic Reset and Styling */
        * {
            box-sizing: border-box;
        }

        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            overflow: hidden;
            font-family: 'Source Sans Pro', 'Helvetica Neue', Arial, sans-serif;
            background-color: #000000;
            color: #ffffff;
            line-height: 1.4;
        }

        /* Carousel Container Styling */
        #carouselExample {
            background: #000000;
            border-radius: 0;
        }

        /* News Content Layout Improvements */
        .carousel-item {
            height: 100%;
            width: 100%;
        }

        .carousel-item .content-wrapper {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 100%;
            min-height: 150px;
            max-height: 100vh;
            overflow: hidden;
        }

        .carousel-item .text-content {
            padding: clamp(1rem, 3vw, 3rem);
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            height: 100%;
            background: #000000;
            position: relative;
            flex: 1 1 50%;
            min-width: 0;
            overflow: hidden;
        }

        .carousel-item .category-badge {
            display: inline-block;
            background: #d32f2f;
            color: white;
            padding: clamp(0.5rem, 1vw, 0.75rem) clamp(0.75rem, 2vw, 1.5rem);
            border-radius: 4px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: clamp(1rem, 2vw, 2rem);
            font-size: clamp(0.75rem, 1.5vw, 0.875rem);
            width: fit-content;
            font-family: 'Source Sans Pro', Arial, sans-serif;
        }

        .carousel-item .news-title {
            font-weight: 700;
            line-height: 1.2;
            margin-bottom: clamp(1rem, 2vw, 2rem);
            color: #ffffff;
            font-family: 'Source Sans Pro', Arial, sans-serif;
            margin-top: 0;
            font-size: clamp(1.25rem, 3vw, 2.5rem);
        }

        .carousel-item .news-description {
            color: #cccccc;
            line-height: 1.5;
            font-weight: 400;
            font-family: 'Source Sans Pro', Arial, sans-serif;
            margin: 0;
            font-size: clamp(0.875rem, 2vw, 1.25rem);
            overflow: hidden;
        }

        .carousel-item .image-container {
            background: #111111;
            border-radius: 0;
            overflow: hidden;
            margin: 0;
            position: relative;
            flex: 1 1 50%;
            min-width: 0;
            min-height: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100%;
            max-height: 100%;
        }

        .carousel-item .image-container img {
            border-radius: 0;
            transition: none;
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center;
            flex-shrink: 1;
        }

        /* Container for the News Ticker */
        #newsTickerBox {
            position: absolute;
            z-index: 100;
            bottom: 0;
            width: 100vw;
            height: 100px;
            background: #d32f2f;
            color: #ffffff;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            box-sizing: border-box;
            border-top: 4px solid #b71c1c;
        }

        /* Flex Container for Clock and Weather */
        .ticker-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
            width: 100%;
            padding: 0 2rem;
        }

        /* Individual Sections Styling */
        #clock,
        #weather {
            white-space: nowrap;
            font-weight: 600;
            letter-spacing: 0.5px;
            font-family: 'Source Sans Pro', Arial, sans-serif;
        }

        #clock {
            font-family: 'Source Sans Pro', Arial, sans-serif;
            font-weight: 700;
            padding: 1rem 1.5rem;
            color: #ffffff;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
            min-width: 160px;
            text-align: center;
        }

        #weather {
            padding: 1rem 1.5rem;
            font-weight: 600;
            color: #ffffff;
            text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
            font-size: 1.25rem;
            min-width: 200px;
            text-align: center;
        }

        /* Accessibility: Reduce motion for users who prefer it */
        @media (prefers-reduced-motion: reduce) {
            .carousel-fade .carousel-item {
                transition: none;
            }
        }
    </style>

    <div style="height: calc(100vh - 100px); width: 100vw" id="carouselExample" data-bs-ride="carousel" class="carousel slide carousel-fade">
        <div id="carousel-inner" style="width: 100%; height: 100%" class="carousel-inner"></div>
    </div>

    <div id="newsTickerBox">
        <div class="ticker-content">
            <span id="clock" aria-label="Current Time" style="display: none">
                00:00:00
            </span>
            <span id="weather" aria-label="Current Weather" style="display: none">
                Loading weather...
            </span>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

{{/ base/containers/html-container }}