{{#> base/containers/html-container title="Newsticker Configuration Form" }}

    <div>
        <div class="card-body">
            <!-- Content Options -->
            <div class="mb-4">
                <h6 class="mb-3">{% trans "Display Components" %}</h6>
                <div class="row">
                    <div class="form-check ms-3">
                        <input type="checkbox" name="showNews-input" id="showNews-input" class="form-check-input" checked />
                        <label for="showNews-input" class="form-check-label ">
                            <i class="fas fa-newspaper"></i>{% trans "Include News" %}
                        </label>
                    </div>


                    <br>

                    <div class="form-check ms-3">
                        <input type="checkbox" name="showClock-input" id="showClock-input" class="form-check-input" checked />
                        <label for="showClock-input" class="form-check-label ">
                            <i class="fas fa-clock"></i>{% trans "Include Clock" %}
                        </label>
                    </div>

                    <br>

                    <div class="form-check ms-3">
                        <input type="checkbox" name="showWeather-input" id="showWeather-input" class="form-check-input" checked />
                        <label for="showWeather-input" class="form-check-label">
                            <i class="fas fa-cloud-sun "></i>{% trans "Include Weather" %}
                        </label>
                    </div>

                    <br>

                    <div class="form-check ms-3">
                        <input type="checkbox" name="lightMode-input" id="lightMode-input" class="form-check-input" />
                        <label for="lightMode-input" class="form-check-label">
                            <i class="fas fa-sun"></i>Light Mode
                        </label>
                    </div>
                </div>
            </div>

            <!-- Weather Location -->
            <div class="mb-4">
                <label for="weather-location-input" class="form-label ">
                    {% trans "Weather Location" %}
                </label>
                <select name="weather-location-input" id="weather-location-input" class="form-select   border-gray">
                    <!-- Options will be populated dynamically -->
                </select>
            </div>

            <!-- Ticker Settings -->
            <div class="mb-4">
                <h6 class=" mb-3">{% trans "Ticker Settings" %}</h6>
                <div class="row">
                    <div class="col-md-6 mb-3 d-flex gap-1 align-items-end">
                        <label for="ticker-speed-input" class="form-label me-3" style="min-width: 25%">
                            {% trans "Speed (px/sec):" %}
                        </label>
                        <input type="number" id="ticker-speed-input" name="ticker-speed-input" class="form-control border-gray" min="10" max="400" step="10" value="80" />
                    </div>
                    <br>
                    <div class="col-md-6 mb-3 d-flex gap-1 align-items-end">
                        <label for="font-size-input" class="form-label me-3" style="min-width: 25%">
                            {% trans "Font Size (rem):" %}
                        </label>
                        <input type="number" id="font-size-input" name="font-size-input" class="form-control border-gray" min="0.5" max="3" step="0.1" value="2" />
                    </div>
                </div>
            </div>

            <!-- Info Section -->
            <div class="alert alert-info bg-secondary-accent-lighter border-gray mb-4" role="alert">
                <i class="fas fa-info-circle me-2"></i>
                <strong>{% trans "Note:" %}</strong> {% trans "The ticker will appear at the bottom of your display and scroll continuously. You can move it by dragging it to your desired position." %}
            </div>
        </div>
    </div>

{{/ base/containers/html-container }}