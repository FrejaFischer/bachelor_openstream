{{#> base/containers/html-container title="Dreambroker Video Configuration" }}

    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="card bg-dark border-secondary">
                    <div class="card-header">
                        <h5 class="mb-0 text-white">
                            Dreambroker Video Configuration
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Video URL Input -->
                        <div class="mb-4">
                            <label for="dreambroker-video-url" class="form-label text-white">
                                Dreambroker Video URL
                            </label>
                            <input id="dreambroker-video-url" type="url" class="form-control bg-secondary text-white border-secondary" placeholder="https://dreambroker.com/channel/your-channel/your-video" />
                            <div class="form-text text-muted">
                                Enter the full Dreambroker channel URL (e.g., https://dreambroker.com/channel/v0fmvsex/3hhn4c7v)
                            </div>
                        </div>

                        <!-- Audio Settings -->
                        <div class="mb-4">
                            <label class="form-label text-white">Audio Settings</label>
                            <div class="form-check">
                                <input id="mute-checkbox" type="checkbox" class="form-check-input" checked />
                                <label for="mute-checkbox" class="form-check-label text-white">
                                    <i class="fas fa-volume-mute me-2"></i>Mute Video (Recommended for displays)
                                </label>
                            </div>
                        </div>

                        <!-- Info Section -->
                        <div class="alert alert-info mb-4" role="alert">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Note:</strong> Videos are muted by default in edit mode. Audio settings only apply when the display is live.
                        </div>

                        <!-- Action Button -->
                        <div class="d-flex justify-content-end">
                            <button class="btn btn-primary" id="construct-iframe-html-btn">
                                <i class="fas fa-plus me-2"></i>Add Video Player
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{{/ base/containers/html-container }}