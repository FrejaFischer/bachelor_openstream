{{#> base/containers/html-container title="Clock Widget" script-src="/src/assets/slide-types/clock/main.js" }}

    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        html,
        body {
            width: 100%;
            height: 100%;
            display: flex;
            justify-content: center;
            align-items: center;
            background: transparent;
            overflow: hidden;
        }

        .clock {
            font-family: "Arial", sans-serif;
            font-size: 25vw;
            font-weight: bold;
            color: white;
            text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>

    <div class="clock" id="clock"></div>

{{/ base/containers/html-container }}