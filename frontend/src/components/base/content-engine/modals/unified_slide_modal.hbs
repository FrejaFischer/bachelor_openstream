<div class="modal fade"
     id="unifiedSlideModal"
     tabindex="-1"
     aria-labelledby="unifiedSlideModalLabel">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="unifiedSlideModalLabel">{% trans "Add Slide Menu" %}</h5>
                <button type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                        aria-label='{% trans "Close" %}'></button>
            </div>
            <div class="modal-body">
                <!-- Slide Type Selection -->
                <div class="border-bottom pb-3 row">
                    <div>
                        <input type="radio"
                               id="optionTemplate"
                               name="slideType"
                               value="template"
                               checked>
                        <label for="optionTemplate">{% trans "Template Slide" %}</label>
                        &nbsp;&nbsp;
                        <input type="radio" id="optionBlank" name="slideType" value="blank">
                        <label for="optionBlank">{% trans "Blank Slide" %}</label>
                    </div>
                </div>
                <!-- Blank Slide Fields -->
                <div id="blankSlideSection">
                    <div class="mb-3">
                        <label for="slideName" class="form-label">{% trans "Slide Name" %}</label>
                        <input type="text"
                               class="form-control"
                               id="slideName"
                               placeholder='{% trans "e.g. Welcome Slide" %}'>
                    </div>
                    <div class="mb-3">
                        <label for="slideDuration" class="form-label">{% trans "Duration (seconds)" %}</label>
                        <input type="number" class="form-control" id="slideDuration" value="5">
                    </div>
                </div>
                <!-- Template Selection Section (hidden by default) -->
                <div id="templateSlideSection" class="mb-0">
                    <div style="background-color: var(--lightest-gray)"
                         class="py-1 d-flex justify-content-between align-items-center">
                        <p class="semibold my-0">{% trans "Select a template to create a new slide from" %}</p>
                        <p class="semibold my-0">
                            {% trans "Showing templates compatible with aspect ratio:" %}
                            <span class="badge fs-large bg-info text-dark">
                                <span id="aspect-ratio"></span>&nbsp;<span class="material-symbols-outlined me-1">aspect_ratio</span>
                            </span>
                        </p>
                    </div>
                    <div class="row border-top">
                        <!-- Sidebar: Category Filters -->
                        <div class="col-md-1 border-end rounded p-3" id="categorySidebar">
                            <!-- Sidebar checkboxes will be injected here via JS -->
                        </div>
                        <!-- Main Content: Table and Preview -->
                        <div class="col-md-11">
                            <div class="row">
                                <!-- Table Column -->
                                <div class="col-md-6 p-3">
                                    <!-- Search Bar -->
                                    <div class="mb-3">
                                        <input type="text"
                                               id="templateSearch"
                                               class="form-control"
                                               placeholder='{% trans "ðŸ”Ž Search by name, category or tags..." %}'>
                                    </div>
                                    <!-- Template List Table -->
                                    <div id="template-list-table" class="table-responsive">
                                        <table class="table table-hover table-bordered" id="unifiedTemplateTable">
                                            <thead>
                                                <tr>
                                                    <th role="button" data-sort="name">
                                                        <span class="material-symbols-outlined me-1">signature</span>{% trans "Name" %}
                                                    </th>
                                                    <th role="button" data-sort="category">
                                                        <span class="material-symbols-outlined me-1">category</span>{% trans "Category" %}
                                                    </th>
                                                    <th role="button" data-sort="tags">
                                                        <span class="material-symbols-outlined me-1">shoppingmode</span>{% trans "Tags" %}
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- Rows will be added via JS -->
                                            </tbody>
                                        </table>
                                        <div id="no-templates-found-alert" class="alert alert-primary d-none">{% trans "No templates found" %}</div>
                                    </div>
                                </div>
                                <!-- Preview Column -->
                                <div class="col-md-6">
                                    <div id="unifiedTemplatePreview"
                                         class="bg-light p-1 border rounded d-flex align-items-center justify-content-center">
                                        <!-- Preview content will be loaded here -->
                                    </div>
                                </div>
                            </div>
                        </div>
                        <p style="background-color: var(--lightest-gray)"
                           class="px-3 py-2 border-top border-bottom">
                            <strong>{% trans "Enter name and duration for the slide" %}</strong>
                        </p>
                        <div class="row">
                            <div class="col-md-6">
                                <div>
                                    <label for="templateSlideName" class="form-label">
                                        <strong><span class="material-symbols-outlined">signature</span> {% trans "Slide Name" %}
                                        </strong>
                                    </label>
                                    <input type="text"
                                           class="form-control"
                                           id="templateSlideName"
                                           placeholder='{% trans "Enter slide name" %}'>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div>
                                    <label for="templateSlideDuration" class="form-label">
                                        <strong><span class="material-symbols-outlined">timer</span> {% trans "Duration (seconds)" %}
                                        </strong>
                                    </label>
                                    <input type="number"
                                           class="form-control"
                                           id="templateSlideDuration"
                                           value="5">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Modal Body -->
            <div class="modal-footer bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <span class="material-symbols-outlined">cancel</span> {% trans "Cancel" %}
                </button>
                <button type="button" class="btn btn-primary" id="unifiedSaveSlideBtn">
                    <span class="material-symbols-outlined">add</span> {% trans "Add Slide" %}
                </button>
            </div>
        </div>
        <!-- End Modal Content -->
    </div>
    <!-- End Modal Dialog -->
</div>
