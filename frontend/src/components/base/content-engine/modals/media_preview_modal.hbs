{{#> base/modal/modal  id="previewMediaModal" ariaLabelledby="previewMediaLabel" size="modal-lg" }}
    {{#*inline "header"}}
        <h5 class="modal-title" id="previewMediaLabel">{% trans "Preview Media" %}</h5>
        {{> base/modal/modal-header-close }}
    {{/inline}}

    {{#*inline "body"}}
        <div id="preview-media-container" class="d-flex justify-content-center align-items-center bg-light overflow-hidden checkerboard-light" style="height: 75vh;"></div>
    {{/inline}}

    {{#*inline "footer"}}
        <div class="d-flex justify-content-between align-items-center w-100">
            <!-- Background Pattern Toggle Group -->
            <div class="control-group d-flex align-items-center justify-content-between gap-2">
                <p class="control-label m-0">{% trans 'Background:' %}</p>
                <div class="btn-group btn-group-sm d-flex gap-2" role="group" id="backgroundPatternToggleModal">
                    <input type="radio"
                        class="btn-check pattern-light-btn"
                        name="backgroundPatternModal"
                        id="lightPatternModal"
                        autocomplete="off"
                        checked>
                    <label class="btn btn-outline-secondary" for="lightPatternModal">
                        <span class="material-symbols-outlined">light_mode</span>
                    </label>
                    <input type="radio"
                        class="btn-check pattern-dark-btn"
                        name="backgroundPatternModal"
                        id="darkPatternModal"
                        autocomplete="off">
                    <label class="btn btn-outline-secondary" for="darkPatternModal">
                        <span class="material-symbols-outlined">dark_mode</span>
                    </label>
                </div>
            </div>
            
            <button type="button" class="btn btn-secondary" data-bs-target="#mediaListModal" data-bs-toggle="modal">
                <span class="material-symbols-outlined me-1">cancel</span>
                {% trans "Cancel" %}
            </button>
        </div>
    {{/inline}}
{{/base/modal/modal}}