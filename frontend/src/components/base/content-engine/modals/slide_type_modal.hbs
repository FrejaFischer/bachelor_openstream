{{#> base/modal/modal id="slideTypeModal" ariaLabelledby="slideTypeModalLabel" size="modal-xl" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Add Dynamic Content" id="slideTypeModalLabel" }}
        {{> base/modal/modal-header-close}}
    {{/inline}}

    {{#*inline "body"}}
        <!-- ROW: Category checkboxes + Table for Slide Types -->
        <div class="row" id="slideTypeOverviewRow">
            <!-- Left column: Category checkboxes -->
            <div class="col-3 border-end">
                <h6>{% trans "Filter by Category" %}</h6>
                <div id="categoryCheckboxes" class="mb-3">
                    <!-- Dynamically generated category checkboxes go here -->
                </div>
            </div>
            <!-- Right column: Search box + Slide Types table -->
            <div class="col-9">
                <div class="d-flex mb-2">
                    {{> base/form/input type="text" class="form-control" id="slideTypeSearchInput" placeholder="Search by Name..."}}
                    {{> base/buttons/icon-button type="button" id="slideTypeSearchBtn" variant="secondary" class="ms-2" text="Search"}}
                </div>
                <div class="table-responsive">
                    <table class="table table-striped" id="slideTypeTable">
                        <thead>
                            <tr>
                                <th data-sort-key="name" class="sortable-col">{% trans "Name" %}</th>
                                <th data-sort-key="categoryName" class="sortable-col">{% trans "Category" %}</th>
                                <th id="slideTypeTableActionTh">{% trans "Action" %}</th>
                            </tr>
                        </thead>
                        <tbody>
                            <!-- Dynamically generated slide types rows go here -->
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <!-- /#slideTypeOverviewRow -->
        <!-- Hidden container for the selected slide typeâ€™s form -->
        <div id="slideTypeContainer" class="mt-3">
            <!-- loadSlideTypeForm(...) will inject form_html_content here -->
        </div>
    {{/inline}}

    {{#*inline "footer"}}
        {{> base/modal/modal-footer-close btn-text="Cancel"}}
        {{> base/buttons/icon-button type='button' id='select-slide-type-btn' variant='primary' icon='check' text='Select'}}
    {{/inline}}
{{/base/modal/modal}}
