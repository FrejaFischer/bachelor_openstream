{{#> base/content-engine/element-type-toolbars/containers/element-type-toolbars-container class="website-toolbar" title="Website" }}
    <!-- URL input field  -->
    {{> base/form/input type="url" extraClass="w-25 ms-3" name="change-website" id="change-website-input" placeholder="https://example.com" }}
    <!-- Update url button  -->
    {{> base/content-engine/element-type-toolbars/buttons/change-btn id="update-change-website-btn" text='{% trans "Update" %}'}}
    <div class="vr m-1"></div>
    <span class="ms-2">{% trans "Volume" %}</span>
    <div class="d-flex align-items-center gap-2 ms-3">
        {{> base/form/radio name="websiteVolume" id="embed-volume-up" value="false" icon="volume_up" autocomplete="off" ariaLabel="Volume up"}}
        {{> base/form/radio name="websiteVolume" id="embed-volume-off" value="true" icon="volume_off" autocomplete="off" ariaLabel="Volume off"}}
    </div>
{{/base/content-engine/element-type-toolbars/containers/element-type-toolbars-container}}
