{{#> base/content-engine/element-type-toolbars/element-type-toolbars id="list-toolbar" class="list-toolbar" title="List" }}
     <!-- Popover-based toolbar with clean sections -->
    <div class="d-flex align-items-center gap-2 w-100">
        <!-- Structure Control Button -->
        {{> base/content-engine/element-type-toolbars/buttons/option-btn id="list-structure-btn" icon="format_list_bulleted" tooltip="{% trans 'List Structure & Content' %}" text="{% trans 'Structure' %}"}}
        <!-- Typography Control Button -->
        {{> base/content-engine/element-type-toolbars/buttons/option-btn id="list-typography-btn" icon="text_fields" tooltip="{% trans 'Typography & Fonts' %}" text="{% trans 'Typography' %}"}}
    </div>
    <!-- Hidden form elements that will be moved into popovers -->
    <div style="display: none;">
        <!-- List type select -->
        <select id="list-type" name="listType">
            <option value="disc">{% trans "Bullet (•)" %}</option>
            <option value="circle">{% trans "Circle (○)" %}</option>
            <option value="square">{% trans "Square (■)" %}</option>
            <option value="decimal">{% trans "Numbers (1, 2, 3)" %}</option>
            <option value="lower-alpha">{% trans "Letters (a, b, c)" %}</option>
            <option value="upper-alpha">{% trans "Letters (A, B, C)" %}</option>
            <option value="lower-roman">{% trans "Roman (i, ii, iii)" %}</option>
            <option value="upper-roman">{% trans "Roman (I, II, III)" %}</option>
            <option value="none">{% trans "None" %}</option>
        </select>
        <!-- List items textarea -->
        <textarea id="list-items"
                  rows="5"
                  placeholder="{% trans 'Enter one item per line' %}"></textarea>
        <!-- Font size select -->
        <select id="list-font-size">
            <option value="0.8">0.8</option>
            <option value="0.9">0.9</option>
            <option value="1.0">1.0</option>
            <option value="1.1">1.1</option>
            <option value="1.2">1.2</option>
            <option value="1.3">1.3</option>
            <option value="1.4">1.4</option>
            <option value="1.5" selected>1.5</option>
            <option value="1.6">1.6</option>
            <option value="1.8">1.8</option>
            <option value="2.0">2.0</option>
            <option value="2.5">2.5</option>
            <option value="3.0">3.0</option>
        </select>
        <!-- Font family select -->
        <select id="list-font-family">
            <!-- Options will be populated by JavaScript -->
        </select>
        <!-- Font color input -->
        <input type="color" id="list-font-color" value="#212529">
        <!-- Line height select -->
        <select id="list-line-height">
            <option value="1.0">1.0</option>
            <option value="1.2">1.2</option>
            <option value="1.4" selected>1.4</option>
            <option value="1.6">1.6</option>
            <option value="1.8">1.8</option>
            <option value="2.0">2.0</option>
        </select>
        <!-- Item spacing select -->
        <select id="list-item-spacing">
            <option value="0">0</option>
            <option value="0.25">0.25</option>
            <option value="0.5" selected>0.5</option>
            <option value="0.75">0.75</option>
            <option value="1.0">1.0</option>
        </select>
    </div>
{{/base/content-engine/element-type-toolbars/element-type-toolbars}}