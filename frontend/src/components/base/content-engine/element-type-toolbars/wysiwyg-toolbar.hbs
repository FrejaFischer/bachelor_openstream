{{#> base/content-engine/element-type-toolbars/element-type-toolbars class="wysiwyg-toolbar" title="Textbox" }}
      <div class="mx-3 d-flex">
        <select class="font-family-select mx-3 form-select form-select-sm">
            <!-- Populated by JS -->
        </select>
        <select class="font-size-select mx-1 form-select form-select-sm">
            <option value="1">10</option>
            <option value="2">11</option>
            <option value="3">12</option>
            <option value="4">14</option>
            <option value="5">16</option>
            <option value="6">18</option>
            <option value="7">20</option>
            <option value="8">24</option>
            <option value="9">28</option>
            <option value="10">32</option>
            <option value="11">36</option>
            <option selected value="12">40</option>
            <option value="13">44</option>
            <option value="14">48</option>
            <option value="15">52</option>
            <option value="16">56</option>
            <option value="17">60</option>
            <option value="18">64</option>
            <option value="19">68</option>
            <option value="20">72</option>
            <option value="21">80</option>
            <option value="22">88</option>
            <option value="23">96</option>
            <option value="24">104</option>
            <option value="25">112</option>
            <option value="26">120</option>
            <option value="27">128</option>
        </select>
        <select class="line-height-select mx-1 form-select form-select-sm"
                title="{% trans 'Line Height' %}">
            <option value="1">1</option>
            <option value="1.2" selected>1.2</option>
            <option value="1.5">1.5</option>
            <option value="2">2</option>
        </select>
    </div>
    <!-- Text Color Picker -->
    <div class="mx-4">
        <button type="button"
                data-bs-toggle="tooltip"
                data-bs-title='{% trans "Change Text Color" %}'
                class="text-color-picker"
                title='{% trans "Text Color" %}'>
            <i class="material-symbols-outlined">format_color_text</i>
        </button>
    </div>
    <div class="mx-3">
        <button class="btn btn-sm"
                id="boldBtn"
                title='{% trans "Bold" %}'
                data-bs-toggle="tooltip"
                data-bs-title='{% trans "Make Text Bold" %}'>
            <i class="material-symbols-outlined">format_bold</i>
        </button>
        <button class="btn btn-sm"
                id="italicBtn"
                title='{% trans "Italic" %}'
                data-bs-toggle="tooltip"
                data-bs-title='{% trans "Make Text Italic" %}'>
            <i class="material-symbols-outlined">format_italic</i>
        </button>
        <button class="btn btn-sm"
                id="underlineBtn"
                title='{% trans "Underline" %}'
                data-bs-toggle="tooltip"
                data-bs-title='{% trans "Underline Text" %}'>
            <i class="material-symbols-outlined">format_underlined</i>
        </button>
    </div>
    <div class="mx-3">
        <button class="btn btn-sm"
                id="alignTextLeftBtn"
                title='{% trans "Align Left" %}'
                data-bs-toggle="tooltip"
                data-bs-title='{% trans "Align Text Left" %}'>
            <i class="material-symbols-outlined">format_align_left</i>
        </button>
        <button class="btn btn-sm"
                id="alignTextCenterBtn"
                title='{% trans "Align Center" %}'
                data-bs-toggle="tooltip"
                data-bs-title='{% trans "Align Text Center" %}'>
            <i class="material-symbols-outlined">format_align_center</i>
        </button>
        <button class="btn btn-sm"
                id="alignTextRightBtn"
                title='{% trans "Align Right" %}'
                data-bs-toggle="tooltip"
                data-bs-title='{% trans "Align Text Right" %}'>
            <i class="material-symbols-outlined">format_align_right</i>
        </button>
    </div>
    <div class="btn-group mx-3">
        <button id="alignTextTopBtn"
                class="btn btn-sm"
                data-bs-toggle="tooltip"
                title='{% trans "Align Top" %}'
                data-bs-title='{% trans "Align Top" %}'>
            <i class="material-symbols-outlined">vertical_align_top</i>
        </button>
        <button id="alignTextMiddleBtn"
                class="btn btn-sm"
                data-bs-toggle="tooltip"
                title='{% trans "Align Middle" %}'
                data-bs-title='{% trans "Align Middle" %}'>
            <i class="material-symbols-outlined">vertical_align_center</i>
        </button>
        <button id="alignTextBottomBtn"
                class="btn btn-sm"
                data-bs-toggle="tooltip"
                title='{% trans "Align Bottom" %}'
                data-bs-title='{% trans "Align Bottom" %}'>
            <i class="material-symbols-outlined">vertical_align_bottom</i>
        </button>
    </div>
{{/base/content-engine/element-type-toolbars/element-type-toolbars}}
