<div id="table-toolbar"
     class="table-toolbar element-type-toolbar d-none w-100 justify-content-start align-items-center">
    <span class="element-toolbar-name d-inline-flex align-items-center justify-content-center ms-2 px-2">{% trans "Table" %}</span>
    <div class="vr m-2"></div>
    <!-- Popover-based toolbar with clean sections -->
    <div class="d-flex align-items-center gap-2 w-100">
        <!-- Structure & Layout Control Button -->
        <button type="button"
                id="table-structure-btn"
                class="btn btn-secondary btn-sm d-flex align-items-center gap-1"
                data-bs-toggle="tooltip"
                title="{% trans 'Table Structure & Layout' %}">
            <i class="material-symbols-outlined" style="font-size: 18px;">table_chart</i>
            <span class="d-none d-md-inline">{% trans "Structure" %}</span>
        </button>
        <!-- Typography Control Button -->
        <button type="button"
                id="table-typography-btn"
                class="btn btn-secondary btn-sm d-flex align-items-center gap-1"
                data-bs-toggle="tooltip"
                title="{% trans 'Typography & Fonts' %}">
            <i class="material-symbols-outlined" style="font-size: 18px;">text_fields</i>
            <span class="d-none d-md-inline">{% trans "Typography" %}</span>
        </button>
        <!-- Color Control Button -->
        <button type="button"
                id="table-color-btn"
                class="btn btn-secondary btn-sm d-flex align-items-center gap-1"
                data-bs-toggle="tooltip"
                title="{% trans 'Table Colors' %}">
            <i class="material-symbols-outlined" style="font-size: 18px;">color_lens</i>
            <span class="d-none d-md-inline">{% trans "Colors" %}</span>
        </button>
    </div>
    <!-- Hidden form elements that will be moved into popovers -->
    <div style="display: none;">
        <!-- Structure inputs -->
        <input type="number" id="table-rows" min="1" max="20" value="3">
        <input type="number" id="table-cols" min="1" max="10" value="3">
        <select id="table-sizing" name="tableSizing">
            <option value="auto" selected>{% trans "Auto" %}</option>
            <option value="even">{% trans "Even" %}</option>
        </select>
        <!-- Font size selects -->
        <select id="table-header-font-size">
            <option value="0.6">0.6</option>
            <option value="0.7">0.7</option>
            <option value="0.8">0.8</option>
            <option value="0.9">0.9</option>
            <option value="1">1</option>
            <option value="1.1">1.1</option>
            <option value="1.2">1.2</option>
            <option value="1.3">1.3</option>
            <option value="1.4">1.4</option>
            <option value="1.5">1.5</option>
            <option value="1.6">1.6</option>
            <option value="1.7">1.7</option>
            <option value="1.8">1.8</option>
            <option value="1.9">1.9</option>
            <option value="2">2</option>
            <option value="2.1">2.1</option>
            <option value="2.2">2.2</option>
            <option value="2.3" selected>2.3</option>
            <option value="2.5">2.5</option>
            <option value="2.6">2.6</option>
            <option value="2.7">2.7</option>
            <option value="2.8">2.8</option>
            <option value="2.9">2.9</option>
            <option value="3">3</option>
        </select>
        <select id="table-row-font-size">
            <option value="0.6">0.6</option>
            <option value="0.7">0.7</option>
            <option value="0.8">0.8</option>
            <option value="0.9">0.9</option>
            <option value="1">1</option>
            <option value="1.1">1.1</option>
            <option value="1.2">1.2</option>
            <option value="1.3">1.3</option>
            <option value="1.4">1.4</option>
            <option value="1.5">1.5</option>
            <option value="1.6">1.6</option>
            <option value="1.7" selected>1.7</option>
            <option value="1.8">1.8</option>
            <option value="1.9">1.9</option>
            <option value="2">2</option>
            <option value="2.1">2.1</option>
            <option value="2.2">2.2</option>
            <option value="2.3">2.3</option>
            <option value="2.5">2.5</option>
            <option value="2.6">2.6</option>
            <option value="2.7">2.7</option>
            <option value="2.8">2.8</option>
            <option value="2.9">2.9</option>
            <option value="3">3</option>
        </select>
        <!-- Font family selects -->
        <select id="table-header-font-family">
            <!-- Options will be populated by JavaScript -->
        </select>
        <select id="table-row-font-family">
            <!-- Options will be populated by JavaScript -->
        </select>
        <!-- Color inputs -->
        <input class="form-check-input"
               type="checkbox"
               id="table-use-bg-color"
               checked>
        <input type="color" id="table-bg-color" value="#ffffff">
        <input type="color" id="table-font-color" value="#000000">
        <!-- Header color inputs -->
        <input class="form-check-input"
               type="checkbox"
               id="table-use-header-bg-color"
               checked>
        <input type="color" id="table-header-bg-color" value="#f8f9fa">
        <input type="color" id="table-header-font-color" value="#212529">
        <!-- Striped options -->
        <input class="form-check-input" type="checkbox" id="table-striped" checked>
        <input type="color" id="table-striped-bg-color" value="#f8f9fa">
        <input type="color" id="table-striped-font-color" value="#000000">
        <!-- Bordered options -->
        <input class="form-check-input" type="checkbox" id="table-bordered" checked>
        <input type="color" id="table-border-color" value="#dee2e6">
        <input type="number" id="table-border-thickness" min="1" max="5" value="1">
    </div>
</div>
