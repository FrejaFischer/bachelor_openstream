 <div class="slide-canvas">
    <div class="preview-container ">
        <div class="preview-slide"></div>
    </div>

    <!-- Right sidebar reserved for slide-related tools (10rem) -->
    <div class="slide-right-sidebar" aria-hidden="true">
        <!-- Collapse/expand handle -->
        <button type="button" class="sidebar-collapse-btn" aria-label="Toggle sidebar" title="Toggle sidebar">
            <span class="collapse-icon">&gt;&gt;</span>
        </button>
        <div class="sidebar-section p-2">
            <h6 class="mb-2">{% trans "Layers" %}</h6>
            <div id="slide-elements-list" class="list-group list-group-flush small">
                <!-- element rows inserted by JS -->
            </div>
        </div>
    </div>

</div>