<input
	type="{{type}}"
	class="{{#if classOnly}}{{classOnly}}{{else}}form-control{{#if extraClass}} {{extraClass}}{{/if}}{{/if}}"
	id="{{id}}"
	name="{{name}}"
	{{#if value}}value="{{value}}"{{/if}}
	{{#if min}}min="{{min}}"{{/if}}
	{{#if max}}max="{{max}}"{{/if}}
	{{#if checked}}checked{{/if}}
	{{#if required}}required{{/if}}
	{{#if placeholder}}placeholder='{% trans "{{placeholder}}" %}'{{/if}}
>
