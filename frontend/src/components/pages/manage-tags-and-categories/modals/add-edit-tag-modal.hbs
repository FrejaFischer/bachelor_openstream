{{#> base/modal/modal id="tag-modal" ariaLabelledby="tagModalLabel" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Add Tag" id="tagModalLabel"}}
        {{> base/modal/modal-header-close}}
    {{/inline}}

    {{#*inline "body"}}
        <form id="tag-form">
            <input type="hidden" id="tag-id">
            <div class="mb-3">
                {{> base/form/label for="tag-name" text='Tag Name'}}
                {{> base/form/input type="text" id="tag-name" required=true}}
            </div>
        </form>
    {{/inline}}

    {{#*inline "footer"}}
        {{> base/modal/modal-footer-close btn-text='{% trans "Cancel" %}' }}
        {{> base/buttons/icon-button type='button' id='save-tag-btn' variant='primary' icon='save' text='{% trans "Save" %}' }}
    {{/inline}}
{{/base/modal/modal}}