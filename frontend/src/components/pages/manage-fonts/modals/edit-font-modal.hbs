{{#> base/modal/modal id="editFontModal" ariaLabelledby="editFontModalLabel" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Edit Font" id="editFontModalLabel"}}
        {{> base/modal/modal-header-close}}
    {{/inline}}

    {{#*inline "body"}}
        <form id="edit-font-form">
            <input type="hidden" id="edit-font-id" value="">
            <div class="mb-3">
                {{> base/form/label for="edit-font-name" text="Font Name"}}
                {{> base/form/input type="text" id="edit-font-name" required=true}}
                <div class="form-text">{% trans "Name of the font (e.g., 'Open Sans')" %}</div>
            </div>
            <div class="mb-3">
                {{> base/form/label for="edit-font-url" text="Font URL"}}
                {{> base/form/input type="url" id="edit-font-url" required=true}}
                <div class="form-text">{% trans "URL to the font file (e.g., WOFF2, TTF, Google Fonts URL)" %}</div>
            </div>
        </form>
    {{/inline}}

    {{#*inline "footer"}}
        {{> base/modal/modal-footer-close btn-text="Cancel"}}
        {{> base/buttons/icon-button type='button' id='confirm-edit-font-btn' variant='primary' icon='save' text='{% trans "Update Font" %}'}}
    {{/inline}}
{{/base/modal/modal}}