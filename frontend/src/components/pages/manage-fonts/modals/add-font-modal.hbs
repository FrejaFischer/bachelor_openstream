{{#> base/modal/modal id="addFontModal" ariaLabelledby="addFontModalLabel" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Add New Font" id="addFontModalLabel"}}
        {{> base/modal/modal-header-close}}
    {{/inline}}

    {{#*inline "body"}}
        <form id="add-font-form">
            <div class="mb-3">
                {{> base/form/label for="add-font-name" text="Font Name"}}
                {{> base/form/input type="text" id="add-font-name" required=true}}
                <div class="form-text">{% trans "Name of the font (e.g., 'Open Sans')" %}</div>
            </div>
            <div class="mb-3">
                {{> base/form/label for="add-font-url" text="Font URL"}}
                {{> base/form/input type="url" id="add-font-url" required=true}}
                <div class="form-text">{% trans "URL to the font file (e.g., WOFF2, TTF, Google Fonts URL)" %}</div>
            </div>
        </form>
    {{/inline}}

    {{#*inline "footer"}}
        {{> base/modal/modal-footer-close btn-text="Cancel"}}
        {{> base/buttons/icon-button type='button' id='confirm-add-font-btn' variant='primary' icon='save' text='{% trans "Add Font" %}'}}
    {{/inline}}
{{/base/modal/modal}}