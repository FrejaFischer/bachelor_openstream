{{#> base/modal/modal id="deleteColorModal" ariaLabelledby="deleteColorModalLabel" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Delete Color" id="deleteColorModalLabel"}}
        {{> base/modal/modal-header-close}}
    {{/inline}}
    
    {{#*inline "body"}}
        <p>
            {% trans "Are you sure you want to delete" %} <strong id="delete-color-name"></strong>?
        </p>
    {{/inline}}
    
    {{#*inline "footer"}}
        {{> base/modal/modal-footer-close btn-text="Cancel"}}
        {{> base/buttons/icon-button type='button' id='confirm-delete-color-btn' variant='danger' icon='delete' text='Delete'}}
    {{/inline}}
{{/base/modal/modal}}