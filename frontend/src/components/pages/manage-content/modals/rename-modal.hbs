<form id="renameForm">
    {{#> base/modal/modal id="renameModal" }}
        {{#*inline "header"}}
            {{> base/modal/modal-title title="Rename Slideshow"}}
            {{> base/modal/modal-header-close}}
    {{/inline}}
        
        {{#*inline "body"}}
            <div class="mb-3">
                {{> base/form/label for="renameInput" text="New Name"}}
                {{> base/form/input type="text" id="renameInput" placeholder="Enter new slideshow name..." required=true}}
                {{> base/form/invalid-feedback text="Please provide a new name for the slideshow."}}
            </div>
    {{/inline}}
        
        {{#*inline "footer"}}
            {{> base/modal/modal-footer-close btn-text="Cancel"}}
            <button type="submit" class="btn btn-primary">
                <span class="material-symbols-outlined me-1">save</span>
                {% trans "Save Changes" %}
            </button>
    {{/inline}}
{{/base/modal/modal}}
</form>
