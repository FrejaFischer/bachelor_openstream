{{#> base/modal/modal id="colorModal" ariaLabelledby="colorModalLabel" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Add Color" id="colorModalLabel"}}
        {{> base/modal/modal-header-close}}
    {{/inline}}
    
    {{#*inline "body"}}
        <form id="color-modal-form">
            <input type="hidden" id="modal-edit-color-id">
            <div class="mb-3">
                {{> base/form/label for="modal-color-name" text="Name"}}
                {{> base/form/input type="text" id="modal-color-name" required=true}}
                {{> base/form/invalid-feedback text="Please provide a name."}}
            </div>
            <div class="mb-3">
                {{> base/form/label for="modal-color-hex" text="Hex Value"}}
                {{> base/form/input type="color" id="modal-color-hex" extraClass="form-control-color" value="#000000" required=true}}
            </div>
            <div class="mb-3">
                {{> base/form/label for="modal-color-type" text="Type"}}
                {{#> base/form/dropdown id="modal-color-type" }}
                    {{> base/form/dropdown-option value="primary" text="Primary"}}
                    {{> base/form/dropdown-option value="secondary" text="Secondary"}}
        {{/base/form/dropdown}}
            </div>
        </form>
    {{/inline}}
    
    {{#*inline "footer"}}
        {{> base/modal/modal-footer-close btn-text="Cancel"}}
        {{> base/modal/modal-footer-save id="modal-save-btn" btn-text="Save"}}
    {{/inline}}
{{/base/modal/modal}}