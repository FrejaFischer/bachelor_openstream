<form id="renameWayfindingSystemForm">
    {{#> base/modal/modal id="renameWayfindingSystemModal" }}
        {{#*inline "header"}}
            {{> base/modal/modal-title title="Rename Wayfinding System"}}
            {{> base/modal/modal-header-close}}
    {{/inline}}
        
        {{#*inline "body"}}
            <div class="mb-3">
                {{> base/form/label for="renameWayfindingSystemName" text="New Name"}}
                {{> base/form/input type="text" id="renameWayfindingSystemName" required=true}}
                {{> base/form/invalid-feedback text="Please provide a new name for the wayfinding system."}}
            </div>
    {{/inline}}
        
        {{#*inline "footer"}}
            {{> base/modal/modal-footer-close btn-text="Cancel"}}
            <button type="submit" class="btn btn-primary">
                <span class="material-symbols-outlined me-1">save</span>
                Save Changes
            </button>
    {{/inline}}
{{/base/modal/modal}}
</form>
