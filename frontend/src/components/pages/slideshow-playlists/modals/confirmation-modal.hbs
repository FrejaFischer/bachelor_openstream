<!-- Delete Playlist Modal -->
{{#> base/modal/modal id="deletePlaylistModal" }}
    {{#*inline "header"}}
        <div class="bg-warning d-flex justify-content-between align-items-center w-100 p-3">
            {{> base/modal/modal-title class="mb-0" content="<span class=\"material-symbols-outlined me-2\">warning</span>Confirm Delete Playlist"}}
            {{> base/modal/modal-header-close}}
        </div>
    {{/inline}}

    {{#*inline "body"}}
        <div id="deletePlaylistMessage" class="mb-3">
            <p>Are you sure you want to delete the playlist <strong id="playlistToDeleteName"></strong>?</p>
        </div>
        {{> base/modal/confirmation-prompt textBoxId="deletePlaylistTextToType"}}
        <form id="delete-playlist-form">
            <div class="mb-3">
                {{> base/form/label for="deletePlaylistInput" text="Type here:"}}
                {{> base/form/input type="text" id="deletePlaylistInput" placeholder="Type the confirmation text above..." required=true}}
                {{> base/form/invalid-feedback id="deletePlaylistError" text="The text you entered does not match the required confirmation text."}}
            </div>
            {{> base/form/input type="hidden" id="deletePlaylistId"}}
            {{> base/form/input type="hidden" id="deletePlaylistName"}}
        </form>
    {{/inline}}

    {{#*inline "footer"}}
        {{> base/modal/modal-footer-close id="deletePlaylistCancelBtn" btn-text="Cancel"}}
        <button type="button" class="btn btn-danger" id="confirmDeletePlaylistButton" disabled>
            <span class="material-symbols-outlined me-1">delete</span>
            Confirm Delete
        </button>
    {{/inline}}
{{/base/modal/modal}}