{{#> base/modal/modal id="addPlaylistModal" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Add New Slideshow Playlist"}}
        {{> base/modal/modal-header-close}}
    {{/inline}}

    {{#*inline "body"}}
        <form id="add-playlist-form">
            <div class="mb-3">
                {{> base/form/label for="new-playlist-name" text="Playlist Name"}}
                {{> base/form/input type="text" id="new-playlist-name" required=true}}
                {{> base/form/invalid-feedback text="Please provide a playlist name."}}
            </div>
            <div class="mb-3">
                {{> base/form/label for="playlist-aspect-ratio" text="Aspect Ratio"}}
                {{#> base/form/dropdown id="playlist-aspect-ratio" class="js-aspect-ratio-select" required=true}}
                    {{> base/form/dropdown-option value="" text="Select aspect ratio" disabled=true selected=true}}
        {{/base/form/dropdown}}
                {{> base/form/invalid-feedback text="Please select an aspect ratio."}}
            </div>
        </form>
    {{/inline}}

        {{#*inline "footer"}}
        {{> base/modal/modal-footer-close btn-text="Cancel"}}
        {{> base/modal/modal-footer-save id="submit-add-playlist-btn" btn-text="Add Playlist"}}
    {{/inline}}
{{/base/modal/modal}}