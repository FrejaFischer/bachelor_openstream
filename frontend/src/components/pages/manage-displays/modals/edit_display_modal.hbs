{{#> base/modal/modal id="editDisplayModal" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Edit Display"}}
        {{> base/modal/modal-header-close}}
    {{/inline}}

    {{#*inline "body"}}
        <input type="hidden" id="editDisplayGroupId">
        <input type="hidden" id="editDisplayId">
        <div class="mb-3">
            {{> base/form/label for="editDisplayName" text="Display Name"}}
            {{> base/form/input type="text" id="editDisplayName"}}
            {{> base/form/invalid-feedback id="editDisplayNameFeedback" text="Please enter a valid display name"}}
        </div>
        <!-- Aspect Ratio Selection -->
        <div class="mb-3">
            {{> base/form/label for="editDisplayAspectRatio" text="Aspect Ratio"}}
            {{#> base/form/dropdown id="editDisplayAspectRatio" class="js-aspect-ratio-select" required=true}}
                {{> base/form/dropdown-option value="" text="Select aspect ratio" disabled=true selected=true}}
        {{/base/form/dropdown}}
            <div class="form-text text-muted" id="editDisplayAspectRatioNotice" hidden>
                {% trans "Move the display to Inactive Displays to change the aspect ratio." %}
            </div>
            {{> base/form/invalid-feedback text="Please select an aspect ratio."}}
        </div>
        <div class="mb-3">
            <label class="form-label">{% trans "Display URL" %}</label>
            {{> base/form/copyable-input
                inputId="editDisplayUrlInput"
                buttonId="copyUrlBtn"
                notificationId="copyNotification"
                inputClass="form-bold-input"
                buttonClass="custom-btn custom-btn-secondary"
                containerClass="url-container"
                containerId="editDisplayUrlContainer"
                icon="content_copy"
                notificationText="Copied!"}}
        </div>
    {{/inline}}

    {{#*inline "footer"}}
        {{> base/modal/modal-footer-delete-save deleteId="deleteDisplayBtn" deleteText="Delete Display" saveId="save-display-changes-btn" saveText="Save Changes" cancelText="Cancel"}}
    {{/inline}}
{{/base/modal/modal}}