{{#> base/modal/modal id="editSuborgModal" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Edit Suborganisation"}}
        {{> base/modal/modal-header-close}}
    {{/inline}}
    
    {{#*inline "body"}}
        <form id="edit-suborg-form">
            <div class="mb-3">
                {{> base/form/label for="editSuborgNameInput" text="Suborganisation Name"}}
                {{> base/form/input type="text" id="editSuborgNameInput" placeholder="Enter suborg name..." required=true}}
                {{> base/form/invalid-feedback text="Please provide a suborganisation name."}}
            </div>
            {{> base/form/input type="hidden" id="editSuborgId"}}
        </form>
    {{/inline}}
    
    {{#*inline "footer"}}
        {{> base/modal/modal-footer-close btn-text="Close"}}
        {{> base/modal/modal-footer-save id="submitEditSuborgBtn" btn-text="Update Suborganisation"}}
    {{/inline}}
{{/base/modal/modal}}
