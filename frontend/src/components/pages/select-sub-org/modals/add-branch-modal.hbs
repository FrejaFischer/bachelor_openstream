{{#> base/modal/modal id="addBranchModal" }}
    {{#*inline "header"}}
        {{> base/modal/modal-title title="Add New Branch"}}
        {{> base/modal/modal-header-close}}
    {{/inline}}
    
    {{#*inline "body"}}
        <form id="add-branch-form">
            <div class="mb-3">
                {{> base/form/label for="branchNameInput" text="Branch Name"}}
                {{> base/form/input type="text" id="branchNameInput" placeholder="Enter branch name..." required=true}}
                {{> base/form/invalid-feedback text="Please provide a branch name."}}
            </div>
            <!-- We'll store the suborg ID in a hidden field -->
            {{> base/form/input type="hidden" id="selectedSuborgIdForBranch"}}
        </form>
    {{/inline}}
    
    {{#*inline "footer"}}
        {{> base/modal/modal-footer-close btn-text="Close"}}
        {{> base/modal/modal-footer-save id="submitAddBranchBtn" btn-text="Create Branch"}}
    {{/inline}}
{{/base/modal/modal}}
